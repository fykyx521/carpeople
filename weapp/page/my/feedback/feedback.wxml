

<form bindsubmit="bindsubmit">
  <view class="weui-cells__title">输入联系方式</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入联系方式" name='title' />
      </view>
    </view>
  </view>
  <view class="weui-cells__title">请输入想要反馈的内容</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="请输入文本" name='content' style="height: 3.3em" />
        <view class="weui-textarea-counter">0/200</view>
      </view>
    </view>
  </view>
  <button type="primary" form-type="submit" class="weui-btn weui-btn_primary">确认反馈</button>
</form>  
