
    <view class="weui-cells weui-cells">
     

       <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">车找人</view>
        <view class="weui-cell__ft">
          <switch bindchange="bindftypeChange" checked="{{ftype}}"/>
        </view>
      </view>
       <radio-group bindchange="radioChange"> 
         <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="{{item.value}}">
          <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
          <view class="weui-cell__bd">{{item.name}}</view>
          <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
            <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
          </view>
        </label>
       
      </radio-group>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入手机号" value="{{mobile}}" bindinput="mobilechange" />
        </view>
        
      </view>
      
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">人数</view>
        </view>
        <view class="weui-cell__bd">
           <slider show-value bindchange="peoplenumchange" value="{{peoplenum}}" min='1' step="1" max='3'/>
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">出发日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" value="{{startdate}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
            <view class="weui-input">{{startdate}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="time" value="{{starttime}}" start="06:01" end="21:01" bindchange="bindTimeChange">
            <view class="weui-input">{{starttime}}</view>
          </picker>
        </view>
      </view>
        <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">价格</view>
        </view>
        <view class="weui-cell__bd">
           <slider show-value value="50" min='30' step="5" max='100'/>
        </view>
      </view>
    </view>
     <button class="weui-btn" bindtap="bindsubmit" form-type='submit' type="primary">发布</button>
   